Package: resourcer
Type: Package
Title: Resource Resolver
Version: 1.0.0
Authors@R: 
    c(person(given = "Yannick",
             family = "Marcon",
             role = c("aut", "cre"),
             email = "yannick.marcon@obiba.org",
             comment = c(ORCID = "0000-0003-0138-2023")),
      person("OBiBa group",
             role="cph",
